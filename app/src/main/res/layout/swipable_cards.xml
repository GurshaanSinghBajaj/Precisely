<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview_event"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:clickable="true"
    android:foreground="?attr/selectableItemBackground"
    android:orientation="vertical"
    card_view:cardCornerRadius="5dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            >
            <ImageView
                android:id="@+id/event_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@mipmap/banner"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                >
                <TextView
                    android:id="@+id/event_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="20sp"
                    android:textColor="#000000"
                    android:maxLines="1"
                    android:ellipsize="end"
                    />
                <TextView
                    android:id="@+id/event_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="#DF101111"
                    android:maxLines="3"
                    android:ellipsize="end"
                    />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp"
                    >
                    <ImageView
                        android:id="@+id/icon_poster"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@mipmap/ic_launcher"
                        />
                    <TextView
                        android:id="@+id/name_poster"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="The Financial Express"
                        android:textSize="12sp"
                        android:textColor="#101010"
                        android:paddingLeft="5dp"
                        android:layout_toRightOf="@+id/icon_poster"
                        android:maxLength="15"
                        android:ellipsize="end"
                        />
                    <TextView
                        android:id="@+id/pipe"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="|"
                        android:textSize="12sp"
                        android:paddingLeft="5dp"
                        android:layout_toRightOf="@+id/name_poster"
                        />
                    <TextView
                        android:id="@+id/date_posted"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Deadline: Dec 1 2017"
                        android:textSize="12sp"
                        android:paddingLeft="5dp"
                        android:layout_toRightOf="@+id/pipe"
                        />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
        <com.nightonke.boommenu.BoomMenuButton
            android:id="@+id/bmb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            app:bmb_buttonRadius="10dp"
            app:bmb_buttonEnum="ham"
            app:bmb_piecePlaceEnum="piecePlace_ham_3"
            app:bmb_buttonPlaceEnum="buttonPlace_ham_3"
            app:bmb_inList="true"
            android:padding="6dp"
            />
    </RelativeLayout>
</android.support.v7.widget.CardView>